<Window x:Class="Ülesanne_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unit Converter (Distance)" Height="250" Width="420" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Value:" VerticalAlignment="Center"/>
        <TextBox x:Name="InputBox" Grid.Row="0" Margin="70,0,0,0" Width="200" HorizontalAlignment="Left" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <ComboBox x:Name="FromCombo" Width="120" SelectedIndex="0">
                <ComboBoxItem>Inches</ComboBoxItem>
                <ComboBoxItem>Feet</ComboBoxItem>
                <ComboBoxItem>Miles</ComboBoxItem>
            </ComboBox>
            <Button x:Name="SwapButton" Margin="8,0,8,0" Width="40" Click="SwapButton_Click">⇄</Button>
            <ComboBox x:Name="ToCombo" Width="120" SelectedIndex="3">
                <ComboBoxItem>Centimeters</ComboBoxItem>
                <ComboBoxItem>Meters</ComboBoxItem>
                <ComboBoxItem>Kilometers</ComboBoxItem>
            </ComboBox>
            <Button x:Name="ConvertButton" Margin="12,0,0,0" Width="80" Click="ConvertButton_Click">Convert</Button>
        </StackPanel>

        <Border Grid.Row="2" Margin="0,12,0,0" Padding="8" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="6">
            <StackPanel>
                <TextBlock Text="Result:" FontWeight="Bold"/>
                <TextBlock x:Name="ResultText" FontSize="18" Margin="0,6,0,0">-</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
